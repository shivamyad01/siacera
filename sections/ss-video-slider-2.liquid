  <style>
    .video-slide-{{ section.id }} {
      aspect-ratio: 9.6/13;
    }
  </style>
{% elsif slide_ratio_mobile == "landscape" %}
  <style>
  .video-slide-{{ section.id }} {
    aspect-ratio: 12/8;
  }
  </style>
{% elsif slide_ratio_mobile == "square" %}
  <style>
    .video-slide-{{ section.id }} {
      aspect-ratio: 12/12;
    }
  </style>
{% else %}
  <style>
    .video-slide-{{ section.id }} {
      aspect-ratio: auto;
    }
  </style>
{% endif %}

{% if slide_ratio == "portrait" %}
  <style>
    @media(min-width: 1024px) {
      .video-slide-{{ section.id }} {
        aspect-ratio: 9.6/13;
      }
    }
    
  </style>
{% elsif slide_ratio == "landscape" %}
  <style>
    @media(min-width: 1024px) {
      .video-slide-{{ section.id }} {
        aspect-ratio: 12/8;
      }
    }  
  </style>
{% elsif slide_ratio == "square" %}
  <style>
    @media(min-width: 1024px) {
      .video-slide-{{ section.id }} {
        aspect-ratio: 12/12;
      }
    }    
  </style>
{% else %}
  <style>
     @media(min-width: 1024px) {
      .video-slide-{{ section.id }} {
        aspect-ratio: auto;
      }
    }
  </style>
{% endif %}

{% if slide_content_vertical_align_mobile == 'top' %}
  <style>
    .video-slide-content-{{ section.id }} {
      top: 0;
      background: linear-gradient(0deg, transparent 0, #000 100%);
    }

    .video-media-nav-{{ section.id }} {
      bottom: 10px;
    }
  </style>
{% else %}  
  <style>
    .video-slide-content-{{ section.id }} {
      bottom: 0;
      background: linear-gradient(180deg, transparent 0, #000 100%);
    }

    .video-media-nav-{{ section.id }} {
      top: 10px;
    }
  </style>
{% endif %}

{% if slide_content_vertical_align == 'top' %}
  <style>
    @media(min-width: 1024px) {
      .video-slide-content-{{ section.id }} {
        top: 0;
        bottom: unset;
        background: linear-gradient(0deg, transparent 0, #000 100%);
      }

      .video-media-nav-{{ section.id }} {
        bottom: 10px;
        top: unset;
      }
    }
  </style>
{% else %}  
  <style>
    @media(min-width: 1024px) {
      .video-slide-content-{{ section.id }} {
        bottom: 0;
        top: unset;
        background: linear-gradient(180deg, transparent 0, #000 100%);
      }

      .video-media-nav-{{ section.id }} {
        top: 10px;
        bottom: unset;
      }
    }
  </style>
{% endif %}

{% if arrow_shadow %}
  <style>
    .video-btn-prev-{{ section.id }},
    .video-btn-next-{{ section.id }} {
      box-shadow: 0 4px 15px 0 rgba(0, 0, 0, .1);
    }
  </style>
{% endif %}

{% comment %} PREVIEW {% endcomment %}
<style>
  .video-slider-{{ section.id }}.preview .swiper-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    overflow: hidden;
  }

  .video-slider-{{ section.id }}.preview .video-slide-{{ section.id }} {
    width: 100%;
  }

  .video-slider-{{ section.id }}.preview .video-slide-{{ section.id }}:not(:first-child) {
    margin-left: {{ slider_gap_mobile }}px;
  } 

  @media(min-width: 1024px) {
    .video-slider-{{ section.id }}.preview .video-slide-{{ section.id }}:not(:first-child) {
      margin-left: {{ slider_gap }}px;
    } 

    .video-slider-{{ section.id }}.preview .video-slide-{{ section.id }} {
      width: calc(100% / {{ slider_view }} - ({{ slider_gap }}px));
    }
  }
</style>


<div class="section-{{ section.id }} video-{{ section.id }}" style="background-color:{{ background_color }}; background-image: {{ background_gradient }};">
    <div class="section-{{ section.id }}-settings">
      <div class="video-top-content-{{ section.id }}">
        {% if heading != blank %}
          <div class="video-heading-{{ section.id }}">{{ heading }}</div>
        {% endif %}
        <div class="video-buttons-{{ section.id }}">
          <button class="video-btn-prev-{{ section.id }}">
            <span class="animate-icon"></span>
          </button>
          <button class="video-btn-next-{{ section.id }}">
            <span class="animate-icon"></span>
          </button>   
