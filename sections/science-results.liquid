<section class="science-results">
  <div class="science-container">
    <div class="science-heading">
      <h2>{{ section.settings.heading | escape | newline_to_br }}</h2>
      <p class="science-subtext">
        <span class="highlight-line"></span>
        {{ section.settings.subtext }}
      </p>
    </div>

    <div class="science-stats">
      {% for block in section.blocks %}
        <div class="stat">
          <h3>{{ block.settings.number }}</h3>
          <p>{{ block.settings.label }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.science-results {
  background-color: #faf7f5;
  padding: 80px 20px;
  color: #0a1a17;
  font-family: 'Helvetica Neue', sans-serif;
}

.science-container {
  max-width: 1300px;
  margin: 0 auto;
}

.science-heading h2 {
  font-size: 3.5rem;
  font-weight: 400;
  line-height: 1.2;
  margin-bottom: 20px;
}

.science-subtext {
  display: flex;
  align-items: center;
  font-size: 1.1rem;
  color: #0a1a17;
  font-weight: 400;
  margin-top: 20px;
}

.highlight-line {
  display: inline-block;
  width: 2px;
  height: 40px;
  background-color: #d8d840;
  margin-right: 12px;
}

.science-stats {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 80px;
}

.stat {
  flex: 1 1 22%;
  text-align: left;
  margin-bottom: 40px;
}

.stat h3 {
  font-size: 3rem;
  color: #7c9491;
  margin-bottom: 10px;
}

.stat p {
  font-size: 1rem;
  letter-spacing: 0.05em;
  text-transform: uppercase;
  color: #0a1a17;
}

@media (max-width: 768px) {
  .science-heading h2 {
    font-size: 2.2rem;
  }
  .science-stats {
    flex-direction: column;
  }
  .stat {
    margin-bottom: 30px;
  }
}
</style>

{% schema %}
{
  "name": "Science Results Section",
  "settings": [
    {
      "type": "textarea",
      "id": "heading",
      "label": "Main Heading",
      "default": "Groundbreaking\nscience, remarkable\nresults."
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Subtext",
      "default": "Discover the first skincare created to boost NAD+ in skin."
    }
  ],
  "blocks": [
    {
      "type": "stat_item",
      "name": "Stat Item",
      "settings": [
        {
          "type": "text",
          "id": "number",
          "label": "Number / Count",
          "default": "7+"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label Text",
          "default": "Years of Research"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Science Results",
      "blocks": [
        { "type": "stat_item", "settings": { "number": "7+", "label": "Years of Research" } },
        { "type": "stat_item", "settings": { "number": "8", "label": "Product Formulation Awards" } },
        { "type": "stat_item", "settings": { "number": "4", "label": "Top Scientists from MIT & Harvard" } },
        { "type": "stat_item", "settings": { "number": "5", "label": "Human Clinical Trials" } }
      ]
    }
  ]
}
{% endschema %}
